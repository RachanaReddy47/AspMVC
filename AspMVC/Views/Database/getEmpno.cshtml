
@{
    ViewBag.Title = "getEmpno";
}

@*<h2>getEmpno</h2>*@
@using (Html.BeginForm("Display", "Database"))
{
    <table>
        <tr>
            <td>Empno</td>
            <td>@Html.DropDownList("ddlEmpno", new SelectList(ViewBag.L, "EMPNO", "EMPNO",ViewBag.eno), "Select")</td>
            <td>
                <input type="submit" name="submit" value="submit" onclick="return func1();" />
            </td>
        </tr>
    </table>

    if (ViewBag.msg != null)
    {
        <h3>@ViewBag.msg</h3>
    }

}

<script>
    function func1() {
        var eno = document.getElementById("ddlEmpno").value;
        if (eno.length != 0) {
            var result = confirm("Do you want to delete"+eno);
            if (result) {
                return true;
            }
            else
                return false;

        }
        return false;

    }

</script>

